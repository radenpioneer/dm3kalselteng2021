---
import { site } from '$/config.ts' 
import BaseLayout from './base.astro'
import SiteHeader from '$components/site/header.astro'

const { title } = Astro.props || ''
---
<BaseLayout title={ title ? `${title} | ${site.name}` : site.name }>
    <SiteHeader/>
    <main>
        <slot/>
    </main>
    <footer></footer>
</BaseLayout>

<style lang="scss">
    main {
        @apply max-w-screen-lg mx-auto px-4 pb-24;
    }
</style>