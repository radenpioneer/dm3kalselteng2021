---
import { site } from '$/config.ts'
import Navigation from './navigation.astro'
---
<header>
    <a class="header_logo" href="/">
        <img src={`${site.logo}?nf_resize=fit&w=192&h=78`} width="192" height="78" alt={site.name} loading="eager" decoding="async">
    </a>
    <Navigation/>
</header>

<style lang="scss">
    header {
        @apply flex flex-row items-center py-4 px-4 md:px-8 shadow-lg border-b-2 border-green-800;
    }
    .header_logo {
        img {
            @apply w-48 h-auto;
        }
    }
</style>